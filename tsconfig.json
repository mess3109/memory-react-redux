{
  "baseUrl": "./src",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "jsx": "react",
    "types": [
      "node"
    ],
  },
  "exclude": [
    "node_modules/**",
    "src/db/config.ts",
    "client/**"
  ]
}